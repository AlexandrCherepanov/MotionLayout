<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="20000"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
           <KeyCycle
               motion:motionTarget="@+id/portal1"
               motion:framePosition="0"
               motion:wavePeriod="2"
               motion:waveShape="reverseSawtooth"
               android:rotation="180"
               motion:waveOffset="0" />
           <KeyAttribute
               motion:motionTarget="@+id/portal1"
               motion:framePosition="100"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/portal1"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/portal1"
               motion:framePosition="20"
               android:alpha="1" />

           <KeyCycle
               motion:motionTarget="@+id/portal2"
               motion:framePosition="0"
               motion:wavePeriod="1"
               motion:waveShape="reverseSawtooth"
               android:rotation="180"
               motion:waveOffset="0" />
           <KeyAttribute
               motion:motionTarget="@+id/portal2"
               motion:framePosition="100"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/portal2"
               motion:framePosition="0"
               android:alpha="0.2" />
           <KeyAttribute
               motion:motionTarget="@+id/portal2"
               motion:framePosition="20"
               android:alpha="1" />

           <KeyCycle
               motion:motionTarget="@+id/portal3"
               motion:framePosition="0"
               motion:wavePeriod="4"
               motion:waveShape="reverseSawtooth"
               android:rotation="180"
               motion:waveOffset="0" />
           <KeyAttribute
               motion:motionTarget="@+id/portal3"
               motion:framePosition="100"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/portal3"
               motion:framePosition="0"
               android:alpha="0.2" />
           <KeyAttribute
               motion:motionTarget="@+id/portal3"
               motion:framePosition="20"
               android:alpha="1" />

           <KeyCycle
               motion:motionTarget="@+id/portal4"
               motion:framePosition="0"
               motion:wavePeriod="4"
               motion:waveShape="reverseSawtooth"
               android:rotation="180"
               motion:waveOffset="0" />
           <KeyAttribute
               motion:motionTarget="@+id/portal4"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/portal4"
               motion:framePosition="100"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/portal4"
               motion:framePosition="10"
               android:alpha="0.8" />
           <KeyAttribute
               motion:motionTarget="@+id/portal4"
               motion:framePosition="20"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/portal4"
               motion:framePosition="90"
               android:alpha="0.6" />




       </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="20000"
        motion:autoTransition="jumpToStart"/>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>