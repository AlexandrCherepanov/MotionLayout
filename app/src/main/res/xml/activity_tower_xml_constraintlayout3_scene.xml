<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="5000">
       <KeyFrameSet>
           <KeyPosition
               motion:motionTarget="@+id/ball1"
               motion:framePosition="10"
               motion:keyPositionType="parentRelative"
               motion:percentX="0.68"
               motion:percentY="0.57" />
           <KeyPosition
               motion:motionTarget="@+id/ball1"
               motion:framePosition="30"
               motion:keyPositionType="parentRelative"
               motion:percentX="0.31"
               motion:percentY="0.46" />
           <KeyPosition
               motion:motionTarget="@+id/ball1"
               motion:framePosition="50"
               motion:keyPositionType="parentRelative"
               motion:percentX="0.38"
               motion:percentY="0.31" />
           <KeyPosition
               motion:motionTarget="@+id/ball1"
               motion:framePosition="70"
               motion:keyPositionType="parentRelative"
               motion:percentX="0.62"
               motion:percentY="0.22" />
           <KeyCycle
               motion:motionTarget="@+id/ball1"
               motion:framePosition="0"
               motion:wavePeriod="1"
              motion:waveShape="sawtooth"
               android:rotation="180"
               motion:waveOffset="0" />
           <KeyAttribute
               motion:motionTarget="@+id/ball1"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/ball1"
               motion:framePosition="10"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/ball1"
               motion:framePosition="30"
               android:alpha="0.2" />
           <KeyAttribute
               motion:motionTarget="@+id/ball1"
               motion:framePosition="50"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/ball1"
               motion:framePosition="55"
               android:alpha="0.8" />
           <KeyAttribute
               motion:motionTarget="@+id/ball1"
               motion:framePosition="90"
               android:alpha="0.7" />
           <KeyAttribute
               motion:motionTarget="@+id/ball1"
               motion:framePosition="100"
               android:alpha="0" />
       </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="5000"
        motion:autoTransition="jumpToStart"/>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/ball1"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="22dp"
            android:layout_height="23dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.62"
            motion:layout_constraintHorizontal_bias="0.7"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_constraintVertical_bias="0.054"
            android:layout_height="23dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="22dp"
            android:id="@+id/ball1" />
    </ConstraintSet>
</MotionScene>